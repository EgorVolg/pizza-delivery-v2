{
  "name": "pizza-delivery-mono",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm --workspace=@pizza/client run dev",
    "dev:server": "npm --workspace=@pizza/server run dev",
    "build": "npm --workspace=@pizza/client run build && npm --workspace=@pizza/server run build",
    "lint": "npm --workspace=@pizza/client run lint",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test -w Client",
    "test:server": "npm run test -w Server",
    "test:client:watch": "npm run test:watch -w Client",
    "test:client:coverage": "npm run test:coverage -w Client",
    "cy:open": "npm run cy:open -w Client",
    "cy:run": "npm run cy:run -w Client"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.17.0",
    "jest": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "msw": "^2.10.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
